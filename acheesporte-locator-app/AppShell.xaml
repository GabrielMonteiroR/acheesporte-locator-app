            ContentTemplate="{DataTemplate main:VenueReservationListPage}"/>
        
        <ShellContent
     Title="Meus locais"
     Route="VenueListPage"
     Icon="stadium.png"
     ContentTemplate="{DataTemplate main:VenueListPage}"/>

        <ShellContent
    Title="HistÃ³rico"
