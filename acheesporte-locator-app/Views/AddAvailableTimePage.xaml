<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:acheesporte_locator_app.ViewModels"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             x:Class="acheesporte_locator_app.Views.AddAvailableTimePage"
             x:DataType="viewmodels:AddAvailableTimeViewModel"
             BackgroundColor="#121212"
             Shell.NavBarIsVisible="False"
             Shell.PresentationMode="Animated">

    <Grid Padding="24,24,24,0" RowSpacing="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Text="Novo Horário" 
               FontSize="24"
               FontAttributes="Bold"
               TextColor="DeepPink" />

        <DatePicker Grid.Row="1"
                    Date="{Binding SelectedDate}"
                    TextColor="White"
                    BackgroundColor="#1e1e1e"
                    MinimumDate="{x:Static sys:DateTime.Today}" />

        <Label Text="Selecione o horário de início:"
               TextColor="White"
               FontSize="14"
               Margin="0,10,0,0"/>
        <TimePicker Grid.Row="2"
                    Time="{Binding SelectedStartTime}"
                    TextColor="White"
                    BackgroundColor="#1e1e1e"
                    Format="HH:mm" />

        <Label Text="Selecione o horário de término:"
               TextColor="White"
               FontSize="14"
               Margin="0,10,0,0"/>
        <TimePicker Grid.Row="3"
                    Time="{Binding SelectedEndTime}"
                    TextColor="White"
                    BackgroundColor="#1e1e1e"
                    Format="HH:mm"/>

        <Entry Grid.Row="4"
               Placeholder="Preço (ex: 50)"
               TextColor="White"
               Keyboard="Numeric"
               BackgroundColor="#1e1e1e"
               PlaceholderColor="Gray"
               Text="{Binding Price}" />

        <Button Grid.Row="5"
                Text="Criar Horário"
                TextColor="White"
                BackgroundColor="DeepPink"
                CornerRadius="12"
                HeightRequest="50"
                Command="{Binding CreateAvailabilityCommand}"
                IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}" />
    </Grid>
</ContentPage>
