             x:Class="acheesporte_locator_app.Views.SplashPage"  
             BackgroundColor="#121212"  
             NavigationPage.HasNavigationBar="False"  
             Shell.NavBarIsVisible="False">  

    <Grid>  
        <WebView x:Name="GifWebView"  
                 HeightRequest="600"  
                 WidthRequest="600"  
