<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="acheesporte_locator_app.Views.SplashPage"
             BackgroundColor="#200937"
             NavigationPage.HasNavigationBar="False"
             Shell.NavBarIsVisible="False">

    <Grid>
        <!-- Centralized vertical stripe -->
        <BoxView BackgroundColor="#FFFFFF"
                 HorizontalOptions="Center"
                 VerticalOptions="Fill"
                 WidthRequest="320" />

        <WebView x:Name="GifWebView"
                 HeightRequest="300"
                 WidthRequest="300"
                 HorizontalOptions="Center"
                 VerticalOptions="Center"
                 BackgroundColor="Transparent" />

        <Label Text="Estamos te autenticando..."
               FontSize="16"
               TextColor="DeepPink"
               HorizontalOptions="Center"
               VerticalOptions="End"
               Margin="0,0,0,80"
               FontAttributes="Bold" />
    </Grid>
</ContentPage>