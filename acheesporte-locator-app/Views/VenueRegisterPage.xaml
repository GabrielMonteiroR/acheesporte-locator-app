<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:acheesporte_locator_app.ViewModels"
             x:Class="acheesporte_locator_app.Views.VenueRegisterPage"
             x:DataType="viewmodels:VenueRegisterViewModel"
             BackgroundColor="#121212"
             Shell.NavBarIsVisible="True"
             Shell.BackgroundColor="#121212"
             Shell.TitleColor="DeepPink"
             Shell.ForegroundColor="DeepPink"
             Title="Cadastrar novo Local"
             Shell.TabBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">

            <!-- Nome -->
            <Label Text="Nome do Local" TextColor="#CCCCCC" />
            <Entry Placeholder="Ex: Arena Society"
                   Text="{Binding Name}"
                   BackgroundColor="#1E1E1E"
                   TextColor="White" />

            <!-- CEP + Buscar -->
            <Label Text="CEP" TextColor="#CCCCCC" />
            <HorizontalStackLayout Spacing="10">
                <Entry Placeholder="00000-000"
                       Text="{Binding PostalCode}"
                       WidthRequest="180"
                       Keyboard="Numeric"
                       BackgroundColor="#1E1E1E"
                       TextColor="White" />
                <Button Text="Buscar"
                        Command="{Binding FindAddressByPostalCodeCommand}"
                        BackgroundColor="DeepPink"
                        TextColor="White"
                        CornerRadius="8" />
            </HorizontalStackLayout>

            <!-- Endereço -->
            <Label Text="Rua" TextColor="#CCCCCC" />
            <Entry Text="{Binding Street}" Placeholder="Rua" BackgroundColor="#1E1E1E" TextColor="White"/>

            <Label Text="Bairro" TextColor="#CCCCCC" />
            <Entry Text="{Binding Neighborhood}" Placeholder="Bairro" BackgroundColor="#1E1E1E" TextColor="White"/>

            <Label Text="Cidade" TextColor="#CCCCCC" />
            <Entry Text="{Binding City}" Placeholder="Cidade" BackgroundColor="#1E1E1E" TextColor="White"/>

            <Label Text="Número" TextColor="#CCCCCC" />
            <Entry Text="{Binding Number}" Placeholder="Número" BackgroundColor="#1E1E1E" TextColor="White"/>

            <Label Text="Complemento" TextColor="#CCCCCC" />
            <Entry Text="{Binding Complement}" Placeholder="Complemento" BackgroundColor="#1E1E1E" TextColor="White"/>

           

            <Label Text="Estado" TextColor="#CCCCCC" />
            <Entry Text="{Binding State}" Placeholder="Estado" BackgroundColor="#1E1E1E" TextColor="White"/>

            <!-- Descrição -->
            <Label Text="Descrição" TextColor="#CCCCCC" />
            <Editor Placeholder="Ex: Quadra com grama sintética e iluminação noturna"
                    Text="{Binding Description}"
                    AutoSize="TextChanges"
                    BackgroundColor="#1E1E1E"
                    TextColor="White" />

            <!-- Capacidade -->
            <Label Text="Capacidade (nº de pessoas)" TextColor="#CCCCCC" />
            <Entry Text="{Binding Capacity}" Keyboard="Numeric" BackgroundColor="#1E1E1E" TextColor="White"/>

            <!-- Regras -->
            <Label Text="Regras do Local" TextColor="#CCCCCC" />
            <Editor Text="{Binding Rules}"
                    Placeholder="Ex: Obrigatório uso de tênis"
                    AutoSize="TextChanges"
                    BackgroundColor="#1E1E1E"
                    TextColor="White" />

            <!-- Tipo de local -->
            <Label Text="Tipo de Local (ID)" TextColor="#CCCCCC" />
            <Entry Placeholder="Ex: 1"
                   Text="{Binding VenueTypeId}"
                   Keyboard="Numeric"
                   BackgroundColor="#1E1E1E"
                   TextColor="White" />

            <!-- Localização -->
            <Button Text="Selecionar Localização no Mapa"
                    Command="{Binding SelectLocationOnMapCommand}"
                    BackgroundColor="#3730A3"
                    TextColor="White"
                    CornerRadius="8" />

            <Label Text="Latitude" TextColor="#CCCCCC" />
            <Entry Text="{Binding Latitude}" IsReadOnly="True" BackgroundColor="#1E1E1E" TextColor="White"/>

            <Label Text="Longitude" TextColor="#CCCCCC" />
            <Entry Text="{Binding Longitude}" IsReadOnly="True" BackgroundColor="#1E1E1E" TextColor="White"/>

            <!-- Imagens -->
            <Button Text="Selecionar Imagens"
                    Command="{Binding SelecionarImagensCommand}"
                    BackgroundColor="#555"
                    TextColor="White"
                    CornerRadius="8" />

            <CollectionView ItemsSource="{Binding ImageUrls}" HeightRequest="100">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame WidthRequest="100" HeightRequest="100" Padding="2" Margin="4" HasShadow="False" BackgroundColor="#1E1E1E">
                            <Image Source="{Binding .}" Aspect="AspectFill" />
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Botão de Cadastrar -->
            <Button Text="Cadastrar Local"
                    Command="{Binding RegisterVenueCommand}"
                    BackgroundColor="Green"
                    TextColor="White"
                    CornerRadius="12"
                    FontAttributes="Bold"
                    HeightRequest="50" />

            <!-- Loading -->
            <ActivityIndicator IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}" Color="White" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
